{
  "builders": [
    {
    "type" : "virtualbox-iso",
    "guest_os_type": "Windows2016_64",
    "iso_url" : "{{ user `2016_iso_url` }}",
    "iso_checksum" : "{{ user `2016_iso_checksum` }}",
    "iso_checksum_type" : "SHA256",
    "headless" : "{{ user `headless` }}",
    "vm_name" : "windows-server-2016-standard",
    "communicator" : "winrm",
    "winrm_username": "{{ user `username` }}",
    "winrm_password": "{{ user `password` }}",
    "shutdown_command" : "c:\\windows\\system32\\sysprep\\sysprep.exe /generalize /oobe /shutdown /unattend:c:\\windows\\system32\\sysprep\\autounattend.xml",
    "post_shutdown_delay": "120s",
    "guest_additions_mode": "attach",
    "hard_drive_interface" : "sata",
    "disk_size" : "40000",
    "hard_drive_nonrotational" : "True",
    "floppy_files" : [
      "build/unattend/2016/standard/autounattend.xml",
      "build/scripts/2016/autounattend.ps1"
    ]
  }
],
"provisioners": [
    {
      "type" : "powershell",
      "script" : "build/scripts/install_oracle_guest_additions.ps1",
      "environment_vars" : "install_vbox_tools={{ user `install_vbox_tools`}}"
    },
    {
      "type" : "powershell",
      "elevated_user" : "{{ user `username`}}",
      "elevated_password" : "{{ user `password`}}",
      "script" : "build/scripts/windows_update.ps1",
      "valid_exit_codes" : [0, 16001]
    },
    {
      "type" : "windows-restart",
      "restart_command" : "shutdown /r /c \"Windows update restart\" /t 5",
      "restart_timeout" : "10m"
    },
    {
      "type" : "powershell",
      "elevated_user" : "{{ user `username`}}",
      "elevated_password" : "{{ user `password`}}",
      "script" : "build/scripts/windows_update.ps1",
      "valid_exit_codes" : [0, 16001]
    },
    {
      "type" : "windows-restart",
      "restart_command" : "shutdown /r /c \"Windows update restart\" /t 5",
      "restart_timeout" : "10m"
    },
    {
      "type" : "file",
      "source" : "build/unattend/2016/standard/autounattend.xml",
      "destination" : "c:\\windows\\system32\\sysprep\\autounattend.xml"
    },
    {
      "type" : "windows-restart",
      "restart_command" : "shutdown /r /c \"Windows update restart\" /t 5",
      "restart_timeout" : "10m"
    },
    {
      "type" : "powershell",
      "script" : "build/scripts/sysprep.ps1",
      "valid_exit_codes" : [0, 16001]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "windows_2016_gui_{{.Provider}}.box"
    }
  ]
}
